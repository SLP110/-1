<script>
import http from "../../../common/js/http";
export default {
	async mounted() {
	    this.actId = this.$root.$mp.query.act_id;
	    this.uId = this.$root.$mp.query.uid;
	    await this.getData();
	},
	data() {
	    return {
	    	phone:'',
	    	smsCode: "",
	      smsFlag: true,
	      btnSmsText: "获取验证码",
	    	actId:'',
	    	uId:'',
	    	sendMoney:'',
	    	sId:'',
	    	Token:''
	    };
	},
	methods:{
		async getData(){
			let redBag = await this.$http.post("/user/getredbag", {
        act_id: this.actId,
        uid: this.uId,
      });
      this.sendMoney = redBag.send_money;
		},
		async getCode(){
			const rex = /^(13[0-9]|14[579]|15[0-3,5-9]|16[6]|17[0135678]|18[0-9]|19[89])\d{8}$/;
      if (this.phone == "") {
        wx.showToast({
          title: "手机号不能为空",
          icon: "none"
        });
        return;
      }
      if (!rex.test(this.phone)) {
        wx.showToast({
          title: "请输入正确的手机号",
          icon: "none"
        });
        return;
      }
      let checkReceive = await this.$http.post("/user/checkreceive", {
        uid: this.uId,
        mobile: this.phone,
      });
      
      if(checkReceive.code == 0){
      	if (this.smsFlag) {
						//发请求
		        this.smsFlag = false;
		        try {
		          await this.$http.post("/user/sendmsgcode", {
		            action: 'reg',
		            mobile: this.phone,
		          });
		          let seconds = 60;
		          this.btnSmsText = seconds + "s";
		
		          let timer = setInterval(() => {
		            seconds--;
		            if (seconds <= 0) {
		              this.btnSmsText = "获取验证码";
		              this.smsFlag = true;
		              clearInterval(timer);
		            } else {
		              this.btnSmsText = seconds + "s";
		            }
		          }, 1000);
		        } catch (error) {
		          this.smsFlag = true;
		        }
		    }
			}else if(checkReceive.code == 53234){
						wx.navigateTo({
		          url: `/pages/newPeople/getSelf/main?act_id=${this.actId}&uid=${this.uId}&phone=${this.phone}`
		        });
   		}else{
						wx.navigateTo({
		          url: `/pages/newPeople/hasGeted/main?act_id=${this.actId}&uid=${this.uId}&phone=${this.phone}`
		        });
			}
		},
		async getCard() {
			const rex = /^(13[0-9]|14[579]|15[0-3,5-9]|16[6]|17[0135678]|18[0-9]|19[89])\d{8}$/;
      if (this.phone == "") {
        wx.showToast({
          title: "手机号不能为空",
          icon: "none"
        });
        return;
      }

      if (!rex.test(this.phone)) {
        wx.showToast({
          title: "请输入正确的手机号",
          icon: "none"
        });
        return;
      }
      if (this.smsCode == "") {
        wx.showToast({
          title: "请输入验证码",
          icon: "none"
        });
        return;
      }
			let Card = await this.$http.post("/user/packetreceive", {
        uid: this.uId,
        mobile: this.phone,
        wx_unionid: wx.getStorageSync("uid"),
        code: this.smsCode,
        act_id: this.actId
      });
      this.sId = Card.token_data.sid;
      this.Token = Card.token_data.token;
			wx.navigateTo({
	      url: `/pages/newPeople/getSuccess/main?act_id=${this.actId}&sid=${this.sId}&token=${this.Token}&phone=${this.phone}`
	    });
    },
	}
}
</script>

