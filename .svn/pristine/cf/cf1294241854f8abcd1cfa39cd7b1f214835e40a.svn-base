$theme-color: #6BC2AE;
$sup-color: #FF7E00;
$price-color: #E94746;
$text-normal-color: #36383A;
$text-sup-color: #919191;
$border-color: #f5f5f5;
$bg-color: #f5f5f5;

$title-text-size: 18px;
$normal-text-size: 16px;
$main-text-size: 14px; 
$sup-text-size: 12px;

text, view {
    font-size: $main-text-size;
    color: $text-normal-color;
}


@mixin main-gradients {
    background: linear-gradient(90deg,#6BC2AE, #7DB9BE);
}

@mixin text-inline {
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}

@mixin  text-inlines($num) {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: $num;
    overflow: hidden;
}

@mixin shadow {
    box-shadow: 0px 0px 5px 1px rgba(0,0,0,.1);
}
@mixin shadow-top {
    box-shadow: 0px -4px 8px 1px rgba(0,0,0,.1);
}
@mixin shadow-left-top {
    box-shadow: -2px -2px 6px 2px rgba(0,0,0,.1);
}
@mixin shadow-left-down {
    box-shadow: -2px 2px 6px 2px rgba(0,0,0,.1);
}
@mixin shadow-right-top {
    box-shadow: 2px -2px 6px 2px rgba(0,0,0,.1);
}
@mixin shadow-right-down {
    box-shadow: 2px 2px 6px 2px rgba(0,0,0,.1);
}